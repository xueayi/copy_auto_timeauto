@echo off
setlocal

REM 提示用户输入目标文件夹路径
set /p "目标文件夹路径=请输入目标文件夹路径（例如：C:\目标文件夹路径\，请确保路径存在）: "

REM 提示用户输入文件名
set /p "文件名=请输入要复制的文件名（例如：文件A.mp4）: "

REM 提示用户输入等待时间（以分钟为单位）
set /p "等待时间=请输入等待时间（分钟）: "

REM 将等待时间转换为秒
set /a "等待时间*=60"

REM 等待一定时间
timeout /t %等待时间%

REM 复制文件
copy "%文件名%" "%目标文件夹路径%"

echo 文件复制完成。
pause

endlocal
